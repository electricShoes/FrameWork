<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<grid id='grdList' desc='회사명'>
    <meta>
        
        <readonly       value="Y" />             <!-- 읽기 전용여부 -->
        <showCheckbox   value="Y" />             <!-- 좌측 체크박스 표시여부 -->
        <showNumber     value="Y" />             <!-- 좌측 번호컬럼 표시여부 -->
        <rowSelection   value="N" />             <!-- 클릭시 전체 로우 선택여부 -->
        <insertable     value="Y" />             <!-- 로우 삽입가능 여부 -->
        <appendable     value="Y" />             <!-- 로우 추가가능 여부 -->
        <editable       value="Y" />             <!-- 로우 추가가능 여부 -->
        <deletable      value="Y" />             <!-- 로우 삭제 가능 여부 -->
        <rollbackable   value="N" />             <!-- 로우 복구 가능 여부 -->
        <gridfitStyle   value="even" />          <!-- 그리드 자동 맞춤 설정 -->
        <columnMove     value="N" />             <!-- 그리드 컬럼이동 -->
        <showHeaderSum  value="N" />             <!-- 헤더영역 합계표시 여부 -->
        <showFooter     value="N" />             <!-- footer영역 여부 -->
        <setSort        value="exclusive" />     <!-- 그리드 정렬 방식  기본값:none,  exclusive: 클릭한 컬럼, incusive: 클릭순으로 멀티 , revers: 마지막 클릭순으로 멀티    -->
        <showStateBar   value="Y" />             <!-- 그리드 상태표시 여부 기본값:Y -->
    </meta>
    <!-- textAlignment : left:기본(좌측정렬), center:중앙정렬, right:우측정렬  -->
    <column field='cmpyCd'         name='회사코드'    type='char'     width='80'      textAlignment='left' maxLength="4" readOnly="Y"/>
    <column field='cmpyNm'         name='회사명'     type='char'     width='80'    textAlignment='left' maxLength="400" readOnly="Y"/>
    <column field='cmpyEnNm'       name='회사영문명' type='combo'    width='80'     textAlignment='center' maxLength="400" readOnly="Y"/>
    <column field='corpNm'         name='공시회사명'  type='char'     width='80'    textAlignment='left' maxLength="400" readOnly="Y"/>
    <column field='bizrRegNo'      name='사업자등록번호'  type='char'     width='80'    textAlignment='left' maxLength="10" readOnly="Y"/>
    <column field='corpSsn'        name='법인등록번호'  type='char'     width='80'    textAlignment='left' maxLength="10" readOnly="Y"/>
    <column field='aitmCd'         name='종목'  type='char'     width='80'    textAlignment='left' maxLength="4" readOnly="Y"/>
    <column field='tpisCd'         name='업종'  type='char'     width='80'    textAlignment='left' maxLength="4" readOnly="Y"/>
    <column field='repNm'          name='대포자성명'  type='char'     width='80'    textAlignment='left' maxLength="40" readOnly="Y"/>
    <column field='repCrfrNo'      name='대표자주민번호'  type='char'     width='80'    textAlignment='left'  maxLength="40" readOnly="Y"/>
    <column field='zipNo'          name='우편번호'  type='char'     width='80'    textAlignment='left' maxLength="6" readOnly="Y"/>
    <column field='pbzAdr'         name='사업장주소'  type='char'     width='80'    textAlignment='left' maxLength="400" readOnly="Y"/>
    <column field='pbzDtlAdr'      name='사업장상세주소'  type='char'     width='80'    textAlignment='left' maxLength="400" readOnly="Y"/>
    <column field='telNo'          name='전화번호'  type='char'     width='80'    textAlignment='left' maxLength="50" readOnly="Y"/>
    <column field='faxNo'          name='팩스번호'  type='char'     width='80'    textAlignment='left' maxLength="50" readOnly="Y"/>
    <column field='estbDt'         name='설립일'  type='char'     width='80'    textAlignment='left' maxLength="8" readOnly="Y"/>
    <column field='regId'          name='작성자'  type='char'     width='80'    textAlignment='left' maxLength="20" hidden="Y" readOnly="Y"/>
    <column field='regDt'          name='작성일'  type='char'     width='80'    textAlignment='left' maxLength="16" hidden="Y" readOnly="Y"/>
    <column field='homePage'       name='홈페이지주소'  type='char'     width='80'    textAlignment='left' maxLength="200" readOnly="Y"/>
    <column field='modId'          name='수정자'  type='char'     width='80'    textAlignment='left' maxLength="20" hidden="Y" readOnly="Y"/>
    <column field='modDt'          name='수정일'  type='char'     width='80'    textAlignment='left' maxLength="16" hidden="Y" readOnly="Y"/>
    
</grid>